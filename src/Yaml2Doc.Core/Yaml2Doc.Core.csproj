<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <IsPackable>true</IsPackable>

    <RootNamespace>Yaml2Doc.Core</RootNamespace>
    <AssemblyName>Yaml2Doc.Core</AssemblyName>

    <PackageId>Yaml2Doc.Core</PackageId>
    <Title>Yaml2Doc Core Library</Title>
    <Description>
      Core library for parsing pipeline YAML into a neutral model for documentation.
    </Description>

    <!-- Xml2Doc configuration specific to this project -->
    <Xml2Doc_OutputDir>$(MSBuildProjectDirectory)\docs</Xml2Doc_OutputDir>
    <Xml2Doc_RootNamespaceToTrim>Yaml2Doc.Core</Xml2Doc_RootNamespaceToTrim>
    <Xml2Doc_TrimRootNamespaceInFileNames>true</Xml2Doc_TrimRootNamespaceInFileNames>
    <Xml2Doc_ReportPath>$(MSBuildProjectDirectory)\docs\yaml2doc.core-report.json</Xml2Doc_ReportPath>
  </PropertyGroup>

  <!-- Keep the existing Xml2Doc target hook -->
  <Target Name="Xml2Doc_WriteFingerprint"
          DependsOnTargets="Xml2Doc_ComputeFingerprint" />

  <ItemGroup>
    <PackageReference Include="Xml2Doc.MSBuild"
                      Version="1.4.0-preview.86-g10fb1f6">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="YamlDotNet" Version="16.3.0" />
  </ItemGroup>

  <PropertyGroup>
    <PackageReadmeFile>README.Core.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="README.Core.md"
          Pack="true"
          PackagePath="/" />
  </ItemGroup>

</Project>
